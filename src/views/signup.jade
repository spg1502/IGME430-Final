extends ./base.jade
block append style
    link(rel="stylesheet", media="screen and (max-width: 700px)", type="text/css", href="/assets/narrow.css")
    link(rel="stylesheet", media="screen and (min-width: 701px)", type="text/css", href="/assets/wide.css")
block body
  nav
    a(href="/login")
    .navlink
      a(href="/login") Login
    .navlink
      a(href="/signup") Sign up
  section#signup
    form#signupForm(class="mainForm", name="signupForm", action="/signup", method="POST")
      label(for="username") Username: 
      input#user(type="text", name="username", placeholder="username")
      br
      label(for="pass") Password: 
      input#pass(type="password", name="pass", placeholder="password")
      br
      label(for="pass2") Password: 
      input#pass2(type="password", name="pass2", placeholder="retype password")
      br
      input(type="hidden", name="_csrf", value="#{csrfToken}")
      a#signupSubmit(class="formSubmit", href="#") Sign up
block scripts
        script(src="/assets/client.js")